                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Departamento de calidad"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#D38A07">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp">

                <ImageButton
                    android:id="@+id/queja1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icosug"
                    android:background="#ffffff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="3dp"
                    >
                    <TextView
                        android:id="@+id/tvqueja1"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:text="Administrativa"
                        android:textSize="24dp"
                        android:textColor="#554b4b"/>
                    <TextView
                        android:id="@+id/tvdesqueja1"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:text="Descripción de la sugerencia"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/fechaque1"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="19/11/2019"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"

                    />

            </LinearLayout>

