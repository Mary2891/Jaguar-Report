<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#C56808"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/usuario"
                    android:layout_weight="0"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Maribel Mora Flores"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#D38A07">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Datos del alumno"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24dp"
                    android:textColor="#C56808"/>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="#D38A07"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:text="T16030549"
                    android:textSize="22dp"/>

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:text="Ing.Tics"
                    android:textSize="22dp"/>

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:text="SÃ©ptimo semestre"
                    android:textSize="22dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Contacto"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24dp"
                    android:textColor="#C56808"/>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="#D38A07"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@mipmap/smartphone"
                    android:text=" 786 119 67 72"
                    android:textSize="22dp"/>
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@mipmap/correo"
                    android:text="  mamorflo2891@gmail.com"
                    android:textSize="22dp"/>




            </LinearLayout>


        </LinearLayout>


    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#C56808"
            android:layout_weight=".5"
            android:onClick="todosreportes"
            android:text="Mis reportes"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            />
        <ImageButton
            android:id="@+id/reporta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".01"
            android:layout_marginHorizontal="2.5dp"
            android:src="@drawable/archivo"
            android:onClick="report"
            android:layout_gravity="bottom"
            android:background="#ffffff"/>



    </LinearLayout>



</LinearLayout>